{% extends 'base.html.twig' %}

{% block body %}

<div class="example-wrapper">
    <h1>Results for {{ search_value }}
</h1>
   

     <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.message }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
</div>
{% endblock %}
